= form_with model: [ @month, @month.incomes.build ] do |form|
  %p
    = form.label :title
    %br/
    = form.text_field :title,            |
      placeholder: "Enter income source" |
  %p
    = form.label :amount
    %br/
    = form.text_field :amount,   |
      placeholder: "Enter value" |
  %p
    = form.label :earner
    %br/
    = form.text_field :earner,     |
      placeholder: "Who earned it" |
  %p
    = form.submit
  %p
    = form.label :status
    %br/
    = form.select :status, ['Realized', 'Expected'], |
      selected: 'Expected'                                      |
