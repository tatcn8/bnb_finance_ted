<%= form_with model: [ @month, @month.incomes.build ] do |form| %>
    <p>
      <%= form.label :title %><br>
      <%= form.text_field :title,
      placeholder: "Enter income source" %>
    </p>
    <p>
        <%= form.label :amount %><br>
        <%= form.text_field :amount,
        placeholder: "Enter value" %>
    </p>
     <p>
        <%= form.label :earner %><br>
        <%= form.text_field :earner,
        placeholder: "Who earned it" %>
    </p>
    <p>
      <%= form.submit %>
    </p>
    <p>
        <%= form.label :status %><br>
        <%= form.select :status, ['public', 'private', 'archived'],
    selected: 'public' %>
    </p>

  <% end %>
  