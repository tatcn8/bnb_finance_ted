= form_with model: month do |form|
  %p
  = form.label :month
  = form.select :month, ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec']

  %br
    %p
    = form.label :year
    = form.select :year, [2012, 2013, 2014, 2015, 2016, 2017, 2018, 2019, 2021, 2022, 2023, 2024, 2025, 2026, 2027, 2028, 2029, 2030, 2031, 2032], |
      selected: 2022

  %br
  %div
    = form.text_field :user_id, |
      id: :month_user_id,       |
      value: current_user.id,   |
      type: :hidden             |
  %div
    = form.submit
  %div
    = form.label :status
    %br/
    = form.select :status, ['public'], |
      selected: 'public'                                      |
